@using Microsoft.AspNetCore.Components.Web
@model CategoryListViewModel


<div class=" list-group card shadow-sm mb-4 ">

	<a href="/product/index" class ="list-group-item"> All Products</a>
	@foreach (var category in Model.Categories)
	{
		var css = "list-group-item list-group-item-action border rounded-3 shadow-sm";
		if(category.CategoryId == Model.CurrentCategory)
		{
			css += " active";
		} 
		<a href="/product/index?category=@category.CategoryId" class="@css">@category.CategoryName</a>
	}

</div>

