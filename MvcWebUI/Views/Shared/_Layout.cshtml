<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - E-TicaretDemo</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MvcWebUI.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

	<style>
		.toast-message {
			position: fixed;
			bottom: 20px; 
			right: 20px; 
			max-width: 300px; 
			padding: 10px 15px; 
			border-radius: 8px; 
			box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); 
			font-size: 14px; 
			z-index: 1050; 
			opacity: 1;
			transition: opacity 0.5s ease-out; 
		}

			.toast-message.hidden {
				opacity: 0; 
				pointer-events: none; 
			}

		.alert-primary {
			background-color: #007bff; 
			color: white; 
		}
	</style>
</head>

<body>

	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E-TicaretDemo</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			<div class="row">
				@if (TempData["message"] != null)
				{
					<div id="toast-message" class="toast-message alert alert-primary">
						@TempData["message"]
					</div>
				}
			</div>
		</main>
	</div>

	<main>
		<div class="container-fluid">
			<div class="row">
				
				<div class="col-2 bg-light vh-100 p-3 shadow-sm">
					@await Component.InvokeAsync("CategoryList")
				</div>

				
				<div class="col-10">
					<main class="py-4">
						@RenderBody()
					</main>
				</div>
			</div>
		</div>
	</main>


</body>

<footer class="bg-dark text-white text-center py-3">
	<p>© 2024 E-TicaretDemo. All rights reserved.</p>
</footer>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
	document.addEventListener("DOMContentLoaded", function () {
		const toastMessage = document.getElementById("toast-message");
		if (toastMessage) {
			setTimeout(() => {
				toastMessage.classList.add("hidden");
			}, 1500);
		}
	});

</script>


@await RenderSectionAsync("Scripts", required: false)

</html>
